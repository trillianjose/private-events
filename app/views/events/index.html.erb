<h1>All events</h1>

<ul>
  <% @events.each do |event| %>
    <li><%= event.title %></li>
    <li><%= event.schedule %></li>
    <li><%= event.description %></li>
    <% if event.owner != current_user && !current_user.assistent?(event) %>
      <%= link_to 'Check-in!', event_checkin_url(event_id: event.id), method: :post %>
    <% end %>
    <br><br>
  <% end %>
</ul>
