<%= form_for(@event) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :title, class: "label" %>
    <%= f.text_field :title, class: "input", placeholder: "e.g Alex Smith" %>
  </div>

  <div class="field">
    <%= f.label :description, class: "label" %>
    <%= f.text_field :description, class: "input", placeholder: "e.g Alex Smith" %>
  </div>

  <div class="field">
    <%= f.label :schedule, class: "label" %>
    <%= f.date_field :schedule, class: 'form-control' %>
  </div>


  <br>
  <div class="has-text-centered">
    <%= f.submit yield(:button_text), class: "button is-primary is-rounded" %>
  </div>
<% end %>
