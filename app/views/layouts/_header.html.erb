<nav class="navbar is-dark" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item" width="112" height="28">
      <%= link_to image_tag("favicon.ico.png", class: "img-responsive", id: "logo"), root_path %>
    </a>
  </div>
  <hr class="navbar-divider">
  <div class="navbar-end">
    <div class="navbar-item">
      <% if !logged_in? %>
        <div class="buttons">
          <strong class="button is-primary"><%= link_to "SignUp", signup_path %></strong>
        </div>
      <% end %>
      <% if logged_in? %>
        <div class="dropdown is-hoverable">
          <div class="dropdown-trigger">
            <button class="button" aria-haspopup="true" aria-controls="dropdown-menu2">
              <span><%= current_user.name%></span>
              <hr class="dropdown-divider">
              <span class="icon is-small">
                <i class="fas fa-angle-down" aria-hidden="true"></i>
              </span>
            </button>
          </div>
          <div class="dropdown-menu" id="dropdown-menu2" role="menu">
            <div class="dropdown-content">
              <div class="dropdown-item">
                <%= link_to "Profile", current_user %>
              </div>
              <hr class="dropdown-divider">
              <div class="dropdown-item">
                <%= link_to "Log out", logout_path, method: :delete %>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="buttons">
          <strong class="button is-light"><%= link_to "Log in", login_path %></strong>
        </div>
      <% end %>
    </div>
  </div>
</nav>
